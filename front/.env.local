# 本地开发环境配置 - Electron桌面应用
VITE_APP_TITLE=Liteisle Desktop (Dev)
VITE_APP_VERSION=1.0.0

# API配置 - 直接请求生产服务器
VITE_API_BASE_URL=https://liteisle.wanbangflow.tech
VITE_WS_BASE_URL=wss://liteisle.wanbangflow.tech

# 应用配置
VITE_APP_ENV=development
VITE_DEBUG=true

# 上传配置
VITE_UPLOAD_MAX_SIZE=100
VITE_UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt,md

# 功能开关
VITE_ENABLE_WEBSOCKET=true
VITE_ENABLE_PICGO=true
VITE_ENABLE_FOCUS_MODE=true

# 本地特有配置
VITE_ENABLE_DEV_TOOLS=true
VITE_MOCK_DATA=false
